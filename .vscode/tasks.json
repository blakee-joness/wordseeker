{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: dev",
            "type": "npm",
            "script": "dev",
            "options": {
              "cwd": "${workspaceFolder}/wordSeeker"
            },
            "isBackground": true,
            "problemMatcher": {
              "pattern": {
                "regexp": "\\d+:\\d+:\\d+ (AM|PM) \\[vite\\]",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
              },
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": "."
              }
            }
          },
          {
            "label": "stop all",
            "command": "echo ${input:terminate}",
            "type": "shell"
          },
    ]
  }